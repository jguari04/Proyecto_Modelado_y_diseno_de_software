@startuml
skinparam monochrome true
skinparam shadowing false
skinparam usecaseBorderThickness 1
skinparam usecaseFontSize 12
skinparam ActorFontSize 12
skinparam packageStyle rectangle

left to right direction

actor VisitanteFinanza      as VF
actor UsuarioFinanza        as UF
actor AdministradorFinanzas as AF

rectangle "Sistema FINANZA" {

    rectangle "Acceso básico" {
        usecase "CU1\nRegistrarse"       as CU1
        usecase "CU2\nConfirmar\ncuenta" as CU2
        usecase "CU3\nIniciar\nsesión"   as CU3
    }

    rectangle "Administración" {
        usecase "CU4\nAdministrar\nusuarios\ny roles" as CU4
    }
}

VF --> CU1
UF --> CU1
UF --> CU2
UF --> CU3
AF --> CU4

@enduml
